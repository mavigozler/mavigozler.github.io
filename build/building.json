{
   "Definitions": {
      "GH_PAGES_PATH": "D:\\dev\\Service.webs\\GitHub Pages Repo\\mavigozler.github.io\\gh-pages",
      "COMPILEDSET": "D:\\dev\\Service.webs\\GitHub Pages Repo\\mavigozler.github.io\\build\\compiledset",
      "SRC_PATH": "D:\\dev\\Service.webs\\GitHub Pages Repo\\mavigozler.github.io\\src",
      "baseCopySet": [
         {
            "source": {
               "dirpath": "%#SRC_PATH#%\\",
               "file": "base.html"
            },
            "destination": {
               "dirpath": "%#GH_PAGES_PATH#%",
               "file": "\\index.html"
            }
         },
         {
            "source": {
               "dirpath": "%#SRC_PATH#%\\css\\",
               "file": "\\*.css"
            },
            "destination": {
               "dirpath": "%#GH_PAGES_PATH#%",
               "file": "*.css"
            }
         }
      ]
   },
   "Tasks": [
      {
         "title": "clean gh-pages directory",
         "action": "delete",
         "target": [ "%#GH_PAGES_PATH#%", "%#COMPILEDSET#%" ],
         "dryrun": false,
         "skip": true
      },
      {
         "title": "compile ts files",
         "action": "run",
         "executable": "tsc",
         "arguments": ["-p", "tsconfig.json"],
         "skip": false
      },
      {
         "title": "post-compile processing",
         "action": "run",
         "executable": "node",
         "arguments": [ "build/compiledset/tunescript.js" ],
         "skip": false
      },
   	{
         "title": "Copy base files",
         "action": "copy",
         "copydef": "baseCopySet",
         "options": ["updateonly"],
         "dryrun": false
      }
   ]
}