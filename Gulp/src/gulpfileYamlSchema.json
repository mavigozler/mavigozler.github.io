{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
   "$id": "https://example.com/product.schema.json",
   "title": "Gulp Configuration in YAML",
   "description": "Specification for Gulp file configuration in YAML file",
   "type": "object",
	"properties": {
		"configNameInfo": {
			"properties": {
				"name": {
					"type": "string",
					"description": ""
				},
				"value": {
					"type": "string",
					"description": "the value for 'name'"
				},
				"description": {
					"type": "string",
					"description": "a description of the config"
				},
				"disable": {
					"type": "string",
					"description": "a description of the config"
				}
			}
		},
		"default": {
			"type": "string",
			"description": "specifies 'task' and 'stage' to default to",
			"properties": {
				"platform": {

				},
				"buildType": {

				}
			}
		},
		"base": ""
	},
	"platform": {
		"type": "string",
		"description": "specifies whether 'browser' or 'Node'",
		"enum": [ "browser", "node" ],
		"properties": {
			"buildType": {
				"type": "string",
				"description": "whether a build is for dev, test, production/release",
				"properties":  {
					"$ref": "#/$defs/buildFeatures"
				},
				"enum": [ "dev", "test", "production", "release" ]
			}
		}
	},
	"$defs": {
		"buildFeatures": {
			"preclean": {
				"type": "object",
				"description": "specifies deletion of folders and files before build",
				"properties": {
					"patterns": {

					},
					"options": {

					}
				}
			},
			"tsconfig": {
				"type": "object",
				"description": "specifies deletion of folders and files before build",
				"properties": {
					"path": {

					},
					"compilerOptionsOverrides": {
						
					}
				}	
			},
			"html": {
				"type": "object",
				"description": "specifies deletion of folders and files before build",
				"properties": {
					"subfolderPaths": {

					},
					"tenplateTransforms": {
						
					},
					"links": {
						
					},
					"scripts": {
						"properties": {
							"special": {

							},
							"module": {
								
							}
						}
						
					}
				}	
			},
			"copyOps": {
				"type": "object",
				"description": "specifies deletion of folders and files before build",
				"properties": {
					"bypass": {

					},
					"from": {
						
					},
					"to": {

					}
				}
			},
			"moveRenameOps": {
				"type": "array",
				"description": "specifies deletion of folders and files before build"
			},
			"editOps": {
				"type": "object",
				"description": "specifies deletion of folders and files before build",
				"properties": {
					"bypass": {

					},
					"filepath": {
						
					},
					"fixes": {
						
					}
				}	
			},
			"bundle": {
				"type": "object",
				"description": "specifies ",
				"properties": {
					"bundler": {
						"type": "string",
						"description": "name of an accepted bundler",
						"enum": [ "webpack", "rollup" ],
						"properties": {
							"entryJS": {

							},
							"dest": {

							}
						}
					}
				}
			}
		}
	},
   "yaml.schemas": {
      "./gulpfileJsonSchema.json": "gulpfile.config.yaml"
	}
}
